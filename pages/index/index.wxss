/**index.wxss**/
.main-header {
  display: flex;
  align-items: center;
  background: #20a0ff;
  color: #fff;
  height: 300rpx;
  font-size: 14pt;
}
.main-header-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.main-header-btn image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
}
.main-header-btn:first-child {
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
}

.main-search {
  position: relative;
}
.main-search image {
  position: absolute;
  top: 50%;
  left: 50rpx;
  width: 32rpx;
  height: 32rpx;
  margin-top: -16rpx;
}
.search {
  height: 72rpx;
  line-height: 72rpx;
  box-sizing: border-box;
  padding: 0 25rpx 0 65rpx;
  margin: 20rpx 30rpx;
  border: 1px solid #e5e9f2;
  border-radius: 5px;
  color: #2c3e50;
  outline: none;
  font-size: 12pt;
  background: #fff;
}

.search-placeholder {
  color: #ccc;
}
.main-search.active .search {
  border-color: #20a0ff;
}
