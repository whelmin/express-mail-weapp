<!--pages/index/claim/claim.wxml-->
<view class="container">
  <!--detail-->
  <view class="detail">
    <text>收件人：{{data.receiveMail.receiver}}</text>
    <text wx:if="{{data.receiveMail.receivePhoneNum}}">收件电话：{{data.receiveMail.receivePhoneNum}}</text>
    <text wx:if="{{data.receiveMail.receiveAddress}}">收件地址：{{data.receiveMail.receiveAddress}}</text>
    <text wx:if="{{data.receiveMail.sender}}">寄件人：{{data.receiveMail.sender}}</text>
    <text wx:if="{{data.receiveMail.sendPhoneNum}}">寄件电话：{{data.receiveMail.sendPhoneNum}}</text>
    <text wx:if="{{data.receiveMail.sendAddress}}">寄件地址：{{data.receiveMail.sendAddress}}</text>
    <text wx:if="{{data.receiveMail.sendTime}}">寄件时间：{{data.receiveMail.sendTime}}</text>
    <text>录入时间：{{data.receiveMail.submitTime}}</text>
  </view>
  <text class="form-title">填写认领表单</text>

  <!--认领信息表单-->
  <form bindreset="submit">
    <view class="cell-item input-group">
      <view class="input-label">认领人：</view>
      <input placeholder="请输入认领人姓名" data-key="form.name" bindinput="bindKeyInput" />
    </view>

    <view class="cell-item input-group">
      <view class="input-label">电话：</view>
      <view class="section">
        <picker bindchange="bindPickerChange" value="{{phoneIndex}}" range="{{phoneNums}}">
          <text wx:if="{{phoneIndex}}">{{phoneNums[phoneIndex]}}</text>
          <text wx:else class="picker-placeholder">请选择联系电话</text>
        </picker>
        </view>
      <navigator url="/pages/user/bind" class="btn">
        <text>新增</text>
      </navigator>
    </view>

    <view class="cell-item input-group">
      <view class="input-label">地址：</view>
      <input placeholder="请输入联系地址" data-key="form.address" bindinput="bindKeyInput" />
    </view>
    <button class="btn btn-lg" form-type="reset">
        <text wx:if="{{!submit_loading}}">提交</text>
        <text wx:else>提交中</text>
    </button>
  </form>

</view>