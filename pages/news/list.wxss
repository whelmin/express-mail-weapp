/* pages/news/list.wxss */
.container{
  background-color: #fff;
  padding-bottom: 20rpx;
}
.filter{
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 170rpx;
  white-space: nowrap;
  background: #fff;
}
.filter-item{
  width: 125rpx;
  height: 125rpx;
  margin: 20rpx;
  margin-left: 0;
  border-radius: 5rpx;
  opacity: .6;
}
.filter-item#all{
  margin-left: 20rpx;
}
.filter-item.active{
  opacity: .9;
  transform: scale(1.1,1.1);
}
.content{
  display: flex;
  flex-direction: column;
  padding: 170rpx 20rpx 0;
}
.content-ending{
  width: 100%;
  color: #bbb;
  text-align: center;
  margin: 30rpx auto;
}
.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 3px;
  padding: 0 30rpx;
  color: #fff;
}
.list-item.jw{
  background-color: #d4237a;
  opacity: .8;
}
.list-item.oa{
  background-color: #20a0ff;
  opacity: .85;
}
.list-item.hy{
  background-color: #ffcb63;
  opacity: .95;
}
.list-item.jz{
  background-color: #e0423b;
  opacity: .85;
}
.list-item.new{
  background-color: #13ce66;
  opacity: .85;
}
.list-item-left{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}
.list-item-title{
  font-size: 12pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}
.list-item-time{
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
}
.list-item-icon{
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}