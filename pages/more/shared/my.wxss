/*批注说明部分*/
.annotation{
    display: flex;
    justify-content: center;
    padding: 20rpx 30rpx;
}
.annotation-item{
    display: flex;
    margin-right: 30rpx;
}
.annotation-item .color{
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    margin-right: 10rpx;
}
.annotation-item text:last-child{
    font-size: 10pt;
}
.color-blue{
    background-color: #20a0ff;
}
.shared-list .main-list-item{
    background: #F9FAFC;
    border: none;
    color: #5e6d82;
}
.main-list-item-content{
    display: flex;
    flex: 1;
}
.main-list-item-content.border-blue{
    border-left: 12rpx solid  #20a0ff;
}
.main-list-item-content .shared-article-title{
    font-size: 14pt;
    line-height: 150%;
}
.main-list-item-content .shared-article-content{
    font-size: 10pt;
    line-height: 120%;
}