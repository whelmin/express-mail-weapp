/* pages/more/shared/list.wxss */

.container{
    position: relative;
}
.nav-tabs{
    background: #13CE66;
}
.shared-list .main-list-item{
    border: 1rpx solid #eaeefb;
    color: #5e6d82;
    background: #f9fafc;
}
.main-list-item navigator{
    width: 100%;
}
.main-list-item-content{
    padding: 15rpx 30rpx;
}
.main-list-item-content .shared-article-title{
    font-size: 14pt;
}
.main-list-item-content .shared-article-content{
    font-size: 10pt;
    line-height: 120%;
}
/*发布按钮*/
.edit{
    display: flex;
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    bottom: 50rpx;
    right: 50rpx;
    background: #F7BA2A;
    justify-content: center;
    align-items:center; 
}
.edit image{
    display: block;
    width: 50%;
    height: 60%;
}
.own{
    bottom: 170rpx;
    background: #13CE66;
}
.own image{
    height:50%;
}
.tab-item{
    position: relative;
}
.tab-item .count{
    position: absolute;
    top: 15rpx;
    right: 95rpx;
    background: #FF4949;
    min-width: 38rpx;
    height: 30rpx;
    border-radius: 15rpx;
    color: #20a0ff;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center; 
    font-size: 9pt;
    font-weight: bold;
}