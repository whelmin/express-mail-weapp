/* pages/more/shared/chat.wxss */
/*群聊*/
.container{
    font-size: 10pt;
    color: #999;
}
.nav-tabs{
    background: #13CE66;
    margin-bottom: 0;
}
.tab-item{
    position: relative;
}
.tab-item .count{
    position: absolute;
    top: 22rpx;
    right: 95rpx;
    background: #FF4949;
    min-width: 38rpx;
    height: 30rpx;
    border-radius: 15rpx;
    color: #20a0ff;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center; 
    font-size: 9pt;
    font-weight: bold;
}
.groupChat{
    padding: 20rpx 30rpx;
    display: flex;
    height: 1200rpx;
    flex-direction: column;
    justify-content: space-between;
}
/*聊天记录区域*/
.chatArea {
    text-align: center;
}
.chatArea .status-remind{
    color: #dc5656;
}
.chatArea .status-remind.success{
    color: #13CE66;
}
.chatArea .divider{
    margin: 20rpx 0;
    width: 100%;
    height: 0;
    border-bottom: 1rpx dotted #999;
}
/*输入区*/
.inputArea{
    display: flex;

}
.inputArea .inputArea-textarea{
    width: 92%;
    height: 80rpx;
    border: 1rpx solid #999;
    padding: 8rpx 10rpx;
    box-sizing: border-box;
}
.inputArea .add{
    width: 8%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.add image{
    width: 40rpx;
    height: 40rpx;
}